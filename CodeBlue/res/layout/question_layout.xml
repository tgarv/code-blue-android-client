<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/question_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ben Bitdiddle"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/answer_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0 Answers"
            android:textSize="14sp" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What time is the hockey game today?"
        android:textSize="16sp" >

    </TextView>
    
    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wondering if I&apos;ll have time to watch it. If not, would it be possible for anyone to do me a favor and blah blah blah blah."
        android:textSize="12sp" >

    </TextView>
    

</LinearLayout>